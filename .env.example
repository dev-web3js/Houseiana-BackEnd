# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/houseiana"

# Server
NODE_ENV=development
PORT=5001

# JWT
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters"
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_TTL=900000
RATE_LIMIT_MAX=100

# AWS S3 (for file uploads)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
S3_BUCKET_NAME="houseiana-uploads"

# SendGrid Email Service
SENDGRID_API_KEY="your-sendgrid-api-key"
SENDGRID_FROM_EMAIL="noreply@houseiana.com"
SENDGRID_FROM_NAME="Houseiana"

# Twilio SMS/WhatsApp (for OTP verification)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-auth-token-here"
TWILIO_PHONE_NUMBER="+1234567890"
TWILIO_VERIFY_SERVICE_SID="your-verify-service-sid"

# KYC Service (Jumio)
JUMIO_API_TOKEN="your-jumio-api-token"
JUMIO_API_SECRET="your-jumio-api-secret"
JUMIO_BASE_URL="https://netverify.com"

# Location Services (Google Maps)
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
MAXMIND_LICENSE_KEY="your-maxmind-license-key"

# Frontend URLs
FRONTEND_URL="http://localhost:3000"
ADMIN_URL="http://localhost:3001"